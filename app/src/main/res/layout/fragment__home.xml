<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="match_parent">
        <Button
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:text="Agregar"
            android:id="@+id/btn_AgregarDatos"
            android:drawableTop="@drawable/ic_add_box_black_48dp"
            android:layout_gravity="left|top" />

        <Button
            android:layout_width="140dp"
            android:layout_marginTop="80dp"
            android:layout_height="120dp"
            android:text="Modificar"
            android:drawableTop="@drawable/ic_edit_black_48dp"
            android:id="@+id/btn_EditarDatos"
            android:layout_gravity="right|top" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="match_parent">
        <Button
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:text="Eliminar"
            android:drawableTop="@drawable/ic_delete_forever_black_48dp"
            android:id="@+id/btn_EliminarDatos"
            android:layout_gravity="left|center_vertical" />

        <Button
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:text="Mostrar"
            android:drawableTop="@drawable/ic_format_list_bulleted_black_48dp"
        android:id="@+id/btn_MostrarDatos"
        android:layout_gravity="right|center_vertical" />

    </LinearLayout>


</RelativeLayout>